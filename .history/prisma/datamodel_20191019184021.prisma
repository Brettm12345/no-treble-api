type Message {
  sender: User! @relation(name: "UserSent")
  receiver: User! @relation(name: "UserReceived")
  body: String!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String! @unique
  sentMessages: [Message] @relation(name: "UserSent")
  receivedMessages: [Message] @relation(name: "UserReceived")
  spotifyToken: String
}
